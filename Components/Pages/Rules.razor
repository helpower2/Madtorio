@page "/rules"
@using Madtorio.Services
@using Madtorio.Data.Models
@inject IRulesService RulesService
@rendermode InteractiveServer

<PageTitle>Rules - Madtorio</PageTitle>

<h1>Community Rules & Guidelines</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Core Principles</h2>
            </div>
            <div class="card-body">
                <p>
                    Our community is built on respect, collaboration, and a shared love of Factorio.
                    These rules help ensure everyone has a positive experience.
                </p>
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <p>Loading rules...</p>
                </div>
            </div>
        </div>
    </div>
}
else if (rulesGrouped != null && rulesGrouped.Any())
{
    @foreach (var categoryGroup in rulesGrouped)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2>@categoryGroup.Key.Name</h2>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(categoryGroup.Key.Description))
                        {
                            <p style="color: #aaa;">@categoryGroup.Key.Description</p>
                        }
                        @if (categoryGroup.Value.Any())
                        {
                            <ol>
                                @foreach (var rule in categoryGroup.Value)
                                {
                                    <li>
                                        @rule.Content
                                        @if (!string.IsNullOrEmpty(rule.DetailedDescription))
                                        {
                                            <br />
                                            <small style="color: #aaa;">@rule.DetailedDescription</small>
                                        }
                                    </li>
                                }
                            </ol>
                        }
                        else
                        {
                            <p class="text-muted">No rules in this category yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted">No rules have been configured yet.</p>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(serverIp))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2>Server Connection</h2>
                </div>
                <div class="card-body">
                    <p>Connect to our Factorio server at:</p>
                    <h3 class="text-orange">@serverIp</h3>
                    <a href="/server-info" class="btn">Connection Guide</a>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Questions?</h2>
            </div>
            <div class="card-body">
                <p>
                    If you have questions about these rules or need clarification, please reach out to a moderator
                    on our Discord server.
                </p>
                <a href="https://tinyurl.com/madtorio-server" target="_blank" class="btn">
                    Join Discord
                </a>
            </div>
        </div>
    </div>
</div>

<footer class="mt-5">
    <p>Thank you for being part of the Madtorio community!</p>
</footer>

@code {
    private Dictionary<RuleCategory, List<Rule>>? rulesGrouped;
    private string? serverIp;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            rulesGrouped = await RulesService.GetActiveRulesGroupedAsync();
            serverIp = await RulesService.GetServerConfigAsync("ServerIP");
        }
        catch (Exception ex)
        {
            // Log error but don't show to user - rules will show as empty
            Console.WriteLine($"Error loading rules: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
